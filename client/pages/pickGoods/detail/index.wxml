<view class="container">
    <!--头部提示语-->
    <view class="top-container-finish">
        <view class="time">
            <text>下单时间：{{goods_detail.order_time}}</text>
            <text>待取货</text>
        </view>
    </view>
    <!--自提地址-->
    <view class="address-container">
        <view class="address-sub-container">
            <view class="address-des">
                <image src="../../../assets/images/iconfont-addr-default.png" class="address-icon"/>
                <text class="address-text">自提地址</text>
            </view>
            <view>{{goods_detail.address}}</view>
            <view>
                <text>店长：{{goods_detail.store_manager}}</text>
                <text>{{goods_detail.phone}}</text>
            </view>
        </view>
    </view>
    <!--自提时间-->
    <view class="address-container">
        <view class="address-sub-container">
            <view class="address-des">
                <image src="../../../assets/images/iconfont-about.png" class="address-icon"/>
                <text class="address-text">自提时间</text>
            </view>
            <view>{{goods_detail.pick_time}}</view>
        </view>
    </view>
    <!--订单列表-->
    <view class="goods-container">
        <block wx:for="{{goods_detail.goods_list}}" wx:for-index="index" wx:key="index">
            <navigator url="../detail/detail?id={{item.id}}">
                <view class="goods-item">
                    <view class="goods-item-left">
                        <image src="{{item.images}}" class="goods-image"/>
                    </view>
                    <view>
                        <text class="goods-item-title">{{item.des}}</text>
                        <view class="goods-item-bottom">
                            <text class="goods-item-expiration-days">¥ {{item.price}}</text>
                            <text class="goods-item-num">x {{item.num}}</text>
                        </view>
                    </view>
                </view>
            </navigator>
        </block>
    </view>
    <!--总价-->
    <view class='goods-bottom-suspension'>
        <view class="price">
            <view class="goods-suspension-time">
                <text>实付金额：</text>
                <text class="goods-suspension-price">¥{{goods_detail.total_amount}}</text>
            </view>
            <text class='goods-suspension-pay'>立即取货</text>
        </view>
    </view>
</view>