.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.top-container-finish {
    height: auto;
    width: 100%;
    background-color: #fff;
    color: #868686;
    margin-bottom: 10px;
}

.top-container-finish .time {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin: 10px 15px;
}

.top-container {
    display: flex;
    height: auto;
    width: 100%;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    color: #868686;
    margin-bottom: 10px;
}

.detail-message {
    margin-top: 10px;
    text-align: center;
}

.detail-message .detail-icon {
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.detail-message .detail-waiting-time {
    color: #FF0000;
    margin-left: 5px;
}

.detail-message .detail-title {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    margin: 2px 0;
}

.detail-message .detail-text {
    margin-top: 5px;
}

.detail-message .detail-button {
    font-size: 16px;
    margin: 15px auto;
    text-align: center;
    width: auto;
}

.detail-message .detail-button .cancel {
    border: 1px #999999 solid;
    color: #333;
    padding: 4px 5px;
}

.detail-message .detail-button .confirm {
    color: #fff;
    background-color: #FF0000;
    padding: 5px 6px;
    margin-left: 15px;
}

.address-container {
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: space-around;
    background-color: #fff;
    color: #868686;
    font-size: 16px;
    margin-bottom: 10px;
    padding: 15px 0;
}

.address-sub-container {
    margin: 10px 15px;
}

.address-des {
    display: flex;
    flex-direction: row;
}

.address-icon {
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.address-text {
    color: #333;
}

.qr-container {
    display: flex;
    height: 100%;
    flex-direction: column;
    align-items: center;
    padding: 20px 45px;
    background-color: #ffffff;
}

.qr-text {
    font-size: 18px;
    color: #333;
}

.qr-icon {
    width: 163px;
    height: 163px;
    margin-top: 20px;
}

.qr-hint-text {
    font-size: 15px;
    color: #ff0000;
    margin-top: 50px;
}