<!--pickGoods.wxml-->
<view class="container">

    <!--list列表-->
    <view>
        <block wx:for="{{list}}" wx:for-index="index" wx:key="index">
            <navigator url="../detail/detail?id={{item.id}}">
                <view class="goods-item-list">
                    <!--下单时间-->
                    <view class="top-order-time">
                        <text class="top-order-time-text">下单时间：{{item.time}}</text>
                    </view>
                    <!--商品列表-->
                    <block wx:for="{{item.goods_list}}" wx:for-index="index" wx:key="index">
                        <navigator url="../detail/detail?id={{item.id}}">
                            <view class="goods-item">
                                <view class="goods-item-left">
                                    <image src="{{item.images}}" class="goods-image"/>
                                </view>
                                <view>
                                    <text class="goods-item-title">{{item.des}}</text>
                                    <text class="goods-item-title-num">¥ {{item.price}}</text>
                                    <view class="goods-item-bottom">
                                        <text class="goods-item-expiration-days">{{item.exchange_day}}天退换</text>
                                        <text class="goods-item-num">x {{item.num}}</text>
                                    </view>
                                </view>
                            </view>
                        </navigator>
                    </block>

                    <!--商品总数，价格-->
                    <view>
                        <view class="goods-item-bottom">
                            <text class="goods-item-count-price">¥ {{item.goods_price}}</text>
                            <text class="goods-item-count-num">共{{item.goods_num}}件商品，实付</text>
                        </view>
                        <view class="goods-item-bottom goods-item-bottom-btn">
                            <text class="goods-btn-pick-goods">立即取货</text>
                        </view>
                    </view>
                </view>
            </navigator>
        </block>
    </view>
</view>