.container {
    width: 100%;
}

.tab-display {
    display: flex;
    flex-direction: column;
    height: auto;
    width: 100%;
    clear: both;
    margin: 0 auto;
    overflow: hidden;
    position: fixed;
    top: 0;
    z-index: 100;
}

.tab {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    clear: both;
}

.tab-nav {
    height: 40px;
    background: #fff;
    border-bottom: 1px solid #ddd;
    display: flex;
    line-height: 40px;
    position: relative;
}

.tab-nav text {
    display: block;
    flex: 1;
    text-align: center;
    width: 25%;
    font-size: 14px;
}

.tab-nav text.active {
    color: #ff0000;
}

.tab-line {
    position: absolute;
    left: 0;
    bottom: -1px;
    height: 2px;
    background: #ff0000;
    transition: all 0.3s;
}

.tab-content {
    width: 400%;
    height: 100%;
    overflow: hidden;
    display: flex;
}

.tab-content .tab-panel {
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    flex: 1;
    /* flex: 0 0 20%; */
}

.nav-tabs {
    width: 100%;
    height: 40px;
    display: flex;
}

.tab-content {
    flex: 1;
}

.default {
    line-height: 40px;
    text-align: center;
    flex: 1;
    border-bottom: 1px solid #eee;
    color: #000;
    font-weight: bold;
    font-size: 28px;
}

.active {
    line-height: 40px;
    text-align: center;
    color: #fc5558;
    flex: 1;
    border-bottom: 1px solid red;
    font-weight: bold;
    font-size: 28px;
}

.show {
    display: block;
    flex: 1;
}

.hidden {
    display: none;
}

.goods-item-container {
    margin-bottom: 45px;
    margin-top: 42px;
    background-color: #f2f2f2;
}

.goods-item-list {
    background-color: #fff;
    padding-left: 8px;
    padding-right: 8px;
    margin-bottom: 10px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.goods-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding-bottom: 8px;
    margin-top: 5px;
}

.goods-item-left {
    width: 50px;
    height: 50px;
}

.goods-image {
    width: 50px;
    height: 50px;
}

.goods-item-title {
    font-size: 13px;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2; /*限制在一个块元素显示的文本的行数*/
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: #666;
    margin-left: 10px;
    width: 65%;
    line-height: 1.5;
    float: left;
}

.goods-item-title-num {
    font-size: 13px;
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 1; /*限制在一个块元素显示的文本的行数*/
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: #666;
    margin-left: 5px;
    margin-right: 5px;
    line-height: 1.5;
    float: right;
}

.goods-item-bottom {
    width: 100%;
    float: left;
    margin-bottom: 5px;
}

.goods-item-bottom-btn {
    margin-bottom: 5px;
}

.goods-item-expiration-days {
    color: #f00;
    border: 1px #f00 solid;
    text-align: center;
    width: auto;
    margin-left: 15px;
    font-size: 8px;
    float: left;
}

.goods-item-num {
    color: #999;
    margin-left: 5px;
    text-align: center;
    width: auto;
    font-size: 11px;
    margin-right: 5px;
    float: right;
}

.top-order-time {
    width: 100%;
    height: auto;
    margin: 5px 0;
}

.top-order-time-text {
    color: #333;
    margin-left: 5px;
    text-align: center;
    width: 100%;
    font-size: 11px;
}

.top-order-hint-time-text {
    color: #999;
    margin-left: 5px;
    text-align: left;
    width: 100%;
    font-size: 10px;
    float: left;
}

.goods-item-count-num {
    color: #999;
    text-align: center;
    width: auto;
    font-size: 13px;
    float: right;
}

.goods-item-count-price {
    color: #333;
    text-align: center;
    width: auto;
    font-size: 13px;
    margin-right: 5px;
    float: right;
}

.goods-btn-pick-goods {
    color: #f00;
    border: 1px #f00 solid;
    text-align: center;
    width: auto;
    margin-right: 5px;
    font-size: 13px;
    float: right;
    margin-top: 2px;
    padding: 2px 3px;
}

.line {
    background: #999999;
    height: 1px;
    width: 100%;
    float: left;
    clear: both;
    margin-top: 5px;
}